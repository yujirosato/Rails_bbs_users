<!DOCTYPE html>
<html>
  <head>
    <title>BbsUsers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      ようこそ！ <strong><%= current_user.name %></strong> さん
      <%= link_to "アカウント編集", edit_user_registration_path %> |
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= yield %>
    <% else %>
      <%= yield %>
      <%= link_to "初めての方", new_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "ログイン", new_user_session_path, :class => 'navbar-link' %>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


  </body>
</html>
