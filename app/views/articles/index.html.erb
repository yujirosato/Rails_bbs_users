<p id="notice"><%= notice %></p>

<br>
<h1>記事だよ！</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>記事</th>
      <th>登校時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.user.name %></td>
        <td><%= article.content %></td>
        <td><%= article.day %></td>
        <td><%= link_to '見る', article %></td>
        <% if user_signed_in? && article.user_id == current_user.id %>
            <td><%= link_to '編集する', edit_article_path(article) %></td>
            <td><%= link_to '削除する', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_article_path %>
